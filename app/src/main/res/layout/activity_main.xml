<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Imagen capturada desde la cámara -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="#e0e0e0" />

    <!-- Botón para capturar imagen -->
    <Button
        android:id="@+id/btnCapture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capturar Autómata" />

    <!-- Entrada para la cadena a simular -->
    <EditText
        android:id="@+id/inputString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la cadena (0s y 1s)"
        android:inputType="text" />

    <!-- Botón para simular la cadena -->
    <Button
        android:id="@+id/btnSimulate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simular Cadena" />

    <!-- Resultado de la simulación -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Resultado"
        android:textSize="18sp"
        android:gravity="center" />

    <!-- Vista personalizada para dibujar el autómata -->
    <com.z_iti_271311_u3_e07.DrawingView
        android:id="@+id/drawView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#FFFFFF" />
</LinearLayout>
